    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: main_dml.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {"CUDA_VISIBLE_DEVICES": "1"},
            "args": ["--train", "--test", "--config", "bert-base-portuguese-cased_DML.json"],
            "justMyCode": false
        },
        {
            "name": "Debug TTT: train.py - module launch",
            "type": "debugpy",
            "request": "launch",
            "module": "ttt.train",
            "console": "integratedTerminal",
            "env": {"CUDA_VISIBLE_DEVICES": "1"},
            "args": ["--config", "1_bert.yaml"],
            "justMyCode": false
        },
        {
            "name": "Python Debugger: TTT train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ttt/train.py",
            "console": "integratedTerminal",
            "env": {"CUDA_VISIBLE_DEVICES": "1"},
            "args": ["--config", "1_bert.yaml"],
            "justMyCode": false
        }
    ]
}